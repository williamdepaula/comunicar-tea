<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Comunicar TEA</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/images/icon.png">
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />

    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <script src="https://unpkg.com/jwt-decode/build/jwt-decode.js"></script>
     
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">

        <div class="col-sm-9">
          <div class="row">
            <div class="col-sm-1">
              <img class="logo" src="/images/logo.png" alt="Comunicar TEA Logo">
            </div>
            <div class="col">
              <h2>Comunicar TEA</h2>          
            </div>
          </div>
        </div>
         
        <div class="col text-right">          
          <div id="buttonDiv"></div> 
        </div>
      </div>
      <div id="container" style="background-color: white;">

      
      <div class="row">
        <div class="col canva" style="background-color: lightblue">
          <div class="card-columns" id="listOne" >	
            <% lista1.forEach(function(item){ %>		

              <div 
                class='card bg-primary text-white text-center' 
                style='width: 10rem;'
                draggable='true' 
                ondragstart='onDragStart(event);' 
                id='item-<%= item.id %>'
              >
                <img 
                  class='card-img' 
                  src='<%= item.img %>' 
                  alt='<%= item.name %>' 
                  draggable='false'
                >
                <div class='card-footer bg-transparent border-success' draggable='false'>
                  <%= item.name %>
                </div>
              </div>
            <% }); %>

            
            
          </div>
        </div>
        <div class="col canva" style="background-color: lightpink">
          <div class="card-columns" id="listTwo">
            <% lista2.forEach(function(item){ %>		

              <div 
                class='card bg-primary text-white text-center' 
                style='width: 10rem;'
                draggable='true' 
                ondragstart='onDragStart(event);' 
                id='item-<%= item.id %>'
              >
                <img 
                  class='card-img' 
                  src='<%= item.img %>' 
                  alt='<%= item.name %>' 
                  draggable='false'
                >
                <div class='card-footer bg-transparent border-success' draggable='false'>
                  <%= item.name %>
                </div>
              </div>
            <% }); %>
		      </div> 
        </div>
      </div>
      <div class="row">
        <div
          class="col-sm-12 canva"
          style="background-color: lightcyan"
          
        >
          <div 
		  id="drop"
		  class="card-columns dropzone" 
		  ondragover="onDragOver(event);"
          ondrop="onDrop(event);"
		  >
            
          </div>
        </div>	
    </div>
    <div class="row">
      <div
        class="col-sm-1 dropzone"
      >
        
      </div>	
    </div>
    
    <div class="fixed-bottom">
      <div class="row">
        <div class="col">
          <button type="button" class="btn btn-outline-primary waves-effect" data-toggle="tooltip" data-placement="left" title="Limpar" onclick="reload()" ><i class="fa-solid fa-eraser" aria-hidden="true"></i> Limpar</button> 
        </div>
        <div class="col text-right">
          <button type="button" class="btn btn-outline-default waves-effect" data-toggle="tooltip" data-placement="left" title="Tela Inteira" onclick="fullScreen()"><i class="far fa-window-maximize" aria-hidden="true"></i></button> 
        </div>
      </div>
    </div>
    
  </div>

    <script src="/javascripts/script.js"></script>
  </body>
</html>
